<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <!-- Heredamos el diÃ¡logo original y lo extendemos -->
  <t t-inherit="sale.ComboConfiguratorDialog" t-inherit-mode="extension">
    <!-- Insertamos botones de cantidad dentro de cada tarjeta de producto -->
    <xpath expr="//ProductCard" position="after">
      <QuantityButtons
        t-att-value="state.selectedComboItems.get(combo.id).quantity || 1"
        t-on-value="value => this._onSetComboItemQuantity(combo.id, value)"/>
    </xpath>
  </t>
</templates>