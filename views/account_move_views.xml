<!-- product_combo/views/account_move_views.xml -->
<odoo>
  <!-- Extiende el formulario de lÃ­nea de factura -->
  <record id="view_move_line_form_inherit_combo" model="ir.ui.view">
    <field name="name">account.move.line.form.combo</field>
    <field name="model">account.move.line</field>
    <field name="inherit_id" ref="account.view_move_line_form"/>
    <field name="arch" type="xml">
      <xpath expr="//notebook/page[@string='Analytic']" position="before">
        <page string="Componentes" attrs="{'invisible': [('product_id.product_tmpl_id.is_combo','=',False)]}">
          <field name="combo_line_ids">
            <tree editable="bottom">
              <field name="product_id"/>
              <field name="quantity"/>
            </tree>
          </field>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
