<odoo>
  <record id="product_template_form_inherit_combo" model="ir.ui.view">
    <field name="name">product.template.form.combo</field>
    <field name="model">product.template</field>
    <!-- hereda la vista notebook principal de product.template -->
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <!-- Inserta tu pestaña justo después de "Variants" -->
      <xpath expr="//notebook/page[@string='Variants']" position="after">
        <page string="Componentes"
              attrs="{'invisible': [('is_combo','=',False)]}">
          <group>
            <field name="combo_line_ids">
              <tree editable="bottom">
                <field name="product_id"/>
                <field name="qty"/>
              </tree>
            </field>
          </group>
        </page>
      </xpath>
      <!-- Mueve el checkbox antes de las variantes -->
      <xpath expr="//group[field[@name='attribute_line_ids']]" position="before">
        <field name="is_combo"/>
      </xpath>
    </field>
  </record>
</odoo>
